<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="{{ path('trismegiste_homepage') }}">{% block home_title %}Home{% endblock %}</a>
            <div class="nav-collapse collapse">
                {% block topmenu_listing %}
                <ul class="nav">
                    {% for label, route in topmenu %}
                    <li{% if app.request.get('_route') == route %} class="active"{% endif %}>
                        <a href="{{ path(route) }}">{{ label }}</a>
                    </li>
                    {% endfor %}    
                    {% block additional %}{% endblock %}
                </ul>
                {% endblock %}
                <form class="navbar-form pull-right" method="GET" action="{{ path('vertex_search') }}">
                    <input class="span2" type="text" placeholder="type a keyword..." name="keyword"/>
                    <button type="submit" class="btn">Search</button>
                </form>                    
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>