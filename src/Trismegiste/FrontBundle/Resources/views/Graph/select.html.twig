<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        {% if app.session.has('working_doc') %}
            {{ app.session.get('working_doc').getTitle() }}
        {% else %}    
            Select a graph...
        {% endif %}
        <b class="caret"></b>
    </a>
    <ul class="dropdown-menu">
        {% for item in graph %}
            <li><a href="{{ path('graph_select', {id:item.getId()}) }}">{{ item.getTitle() }}</a></li>
        {% endfor %}
        <li class="divider"></li>
        <li><a href="{{ path('graph_create') }}">Add new...</a></li>
    </ul>
</li>